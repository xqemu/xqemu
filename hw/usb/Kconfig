    bool
    default y if PCI_DEVICES
    depends on PCI
    select USB

config USB_XHCI_NEC
    bool
    default y if PCI_DEVICES
    depends on PCI
    select USB_XHCI

config USB_MUSB
    bool
    select USB

config TUSB6010
    bool
    select USB_MUSB

